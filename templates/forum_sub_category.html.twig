{% extends "forum.html.twig" %}

{% block title %}{{ name }} - {% endblock %}

{% block style_addition %}
    <link rel="stylesheet" href="{{ asset('css/forum_category.css') }}">
{% endblock %}

{% block left_content %}
    {% if loggedin %}
        <div class="new-topic">
            <a href="{{ path('new_topic', { 'sub_category_id': sub_category_id }) }}">Nouveau Sujet</a>
        </div>
    {% endif %}
    
    {# liste des sujets de la sous-catégorie #}
    
    {# topics : tableau : [
        [
            'title'
            'locked' => booléen verrouillé
            'pinned' => booléen épinglé
            'author'
            'author_photo'
            'date'
            'last_message_author'
            'last_message_photo'
            'last_message_date'
            'new_messages' => booléen s'il y a de nouveaux messages, true pour non inscrit
            'views_nb'
            'messages_nb'
        ]
    ]
    #}
    
    {% for topic in topics %}
        <div class="topic">
            <div class="topic-title-side">
                <div class="topic-title">
                    {% if topic.pinned %}
                        <img src="{{ asset('images/pinned.png') }}">
                    {% endif %}
                    {% if topic.locked %}
                        <img src="{{ asset('images/locked.png') }}">
                    {% endif %}
                    <a href="{{ path('topic', { 'topic_id': topic.id, 'topic_slug': topic.slug }) }}">
                        {% if topic.new_messages %}
                            <strong>{{ topic.title }}</strong>
                        {% else %}
                            {{ topic.title }}
                        {% endif %}
                    </a>
                </div>
                <div class="author-infos">
                    <div class="topic-author">
                        Par <a href="{{ path('user_profile', { 'name': topic.author }) }}">{{ topic.author }}</a>
                    </div>
                    <div class="topic-date">
                        Le {{ topic.date }}
                    </div>
                </div>
            </div>
            <div "topic-numbers-side">
                <div class="topic-messages">
                    {{ topic.messages_nb }}
                </div>
                <div class="topic-views">
                    {{ topic.views_nb }}
                </div>
            </div>
            <div class="last-message-side">
                <div class="last-message-photo">
                    <a href="{{ path('user_profile', { 'name': topic.last_message.author }) }}">
                        <img src="{{ asset('images/') ~ topic.last_message.photo }}">
                    </a>
                </div>
                <a href="{{ path('topic', { 'topic_id': topic.id, 'topic_slug': topic.slug }) ~ '#' ~ topic.last_message.id }}" class="last-message-infos">
                    <div class="last-message-author">
                        {{ topic.last_message.author }}
                    </div>
                    <div class="last-message-date">
                        {{ topic.last_message.date }}
                    </div>
                </a>
            </div>
            {% if is_mod %}
                <script src="{{ asset('js/sub-category-mod-actions.js') }}"></script>
            {% endif %}
        </div>
    {% endfor %}
{% endblock %}
